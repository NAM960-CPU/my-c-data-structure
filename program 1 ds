#include <stdio.h>
#include <stdlib.h>

int main() {
    int *arr, n, sum = 0, max;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    arr = (int *)malloc(n * sizeof(int));
    if (arr == NULL) {
        printf("Memory not allocated!\n");
        return 1;
    }

    printf("Enter %d integers:\n", n);
    for (int i = 0; i < n; i++)
        scanf("%d", arr + i);   

    max = *arr;
    for (int *p = arr; p < arr + n; p++) {
        sum += *p;
        if (*p > max)
            max = *p;
    }

    printf("Sum = %d\n", sum);
    printf("Max = %d\n", max);

    free(arr); 
    return 0;
}
